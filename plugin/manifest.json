{

  "description": "Adds a page action to toggle applying English simplification to pages.",
  "manifest_version": 2,
  "name": "simplify",
  "version": "1.0",
  "homepage_url": "https://github.com/daemon/abc",

  "background": {
    "scripts": ["jquery.min.js", "background.js"]
  },

  "page_action": {
    "default_icon": "icons/off.png",
    "browser_style": true
  },
  
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>" 
  ]

}
